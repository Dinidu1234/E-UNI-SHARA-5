<UserControl x:Class="KickBlastUltraLight.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:model="clr-namespace:KickBlastUltraLight.Models">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBox Name="LocalSearchTextBox" Width="240" ToolTip="Search athletes" TextChanged="FilterChanged" />
                <ComboBox Name="PlanFilterComboBox" Width="160" Margin="12,4,0,8" SelectionChanged="FilterChanged">
                    <ComboBoxItem Content="All" IsSelected="True" />
                    <ComboBoxItem Content="Beginner" />
                    <ComboBoxItem Content="Intermediate" />
                    <ComboBoxItem Content="Advanced" />
                </ComboBox>
                <Button Content="Add Athlete" Style="{StaticResource PrimaryButtonStyle}" Margin="12,4,0,8" Click="AddAthleteButton_Click" />
                <Button Content="Delete Selected" Margin="12,4,0,8" Click="DeleteSelectedButton_Click" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}">
            <DataGrid Name="AthletesDataGrid" AutoGenerateColumns="False" SelectionChanged="AthletesDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="2*" />
                    <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*" />
                    <DataGridTextColumn Header="Plan" Binding="{Binding Plan}" Width="*" />
                    <DataGridTextColumn Header="Weight" Binding="{Binding WeightKg}" Width="*" />
                    <DataGridTextColumn Header="Target" Binding="{Binding TargetWeightKg}" Width="*" />
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
