<UserControl x:Class="KickBlastUltraLight.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="Athlete" FontWeight="SemiBold" />
                <ComboBox Name="AthleteComboBox" DisplayMemberPath="FullName" SelectedValuePath="Id" />

                <TextBlock Text="Competitions" FontWeight="SemiBold" />
                <TextBox Name="CompetitionsTextBox" Text="0" />

                <TextBlock Text="Coaching Hours (0..5)" FontWeight="SemiBold" />
                <TextBox Name="HoursTextBox" Text="0" />

                <Button Content="Calculate & Save" Style="{StaticResource PrimaryButtonStyle}" Margin="0,14,0,0" Click="CalculateButton_Click" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
            <StackPanel>
                <TextBlock Text="Calculation Result" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
                <TextBlock Name="TrainingCostText" FontSize="16" Margin="0,4" />
                <TextBlock Name="CoachingCostText" FontSize="16" Margin="0,4" />
                <TextBlock Name="CompetitionCostText" FontSize="16" Margin="0,4" />
                <TextBlock Name="TotalCostText" FontSize="20" FontWeight="Bold" Margin="0,10,0,4" />
                <TextBlock Name="WeightStatusText" Margin="0,4" />
                <TextBlock Name="DueDateText" Margin="0,4" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
