<UserControl x:Class="KickBlastUltraLight.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Style="{StaticResource CardBorderStyle}" MaxWidth="640" HorizontalAlignment="Left">
            <StackPanel>
                <TextBlock Text="Pricing Settings" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12" />

                <TextBlock Text="Beginner Weekly Fee" FontWeight="SemiBold" />
                <TextBox Name="BeginnerFeeTextBox" />

                <TextBlock Text="Intermediate Weekly Fee" FontWeight="SemiBold" />
                <TextBox Name="IntermediateFeeTextBox" />

                <TextBlock Text="Advanced Weekly Fee" FontWeight="SemiBold" />
                <TextBox Name="AdvancedFeeTextBox" />

                <TextBlock Text="Coaching Hourly Rate" FontWeight="SemiBold" />
                <TextBox Name="CoachingRateTextBox" />

                <TextBlock Text="Competition Fee" FontWeight="SemiBold" />
                <TextBox Name="CompetitionFeeTextBox" />

                <Button Content="Save Pricing" Margin="0,12,0,0" Style="{StaticResource PrimaryButtonStyle}" Click="SaveButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
